
@{
    ViewBag.Title = "CellPhoneRequestApproverMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .modal-dialog {
        width: 800px;
        margin: 30px auto;
    }
</style>
<script>
    var validate = true;
    var eId = 0;
    $(document).ready(function () {
        LoadData();
        EmployeeSearch();
        LoadLocations();
    });
    function LoadLocations() {
        $.ajax({
            type: "POST",
            url: "/Common/GetLocations",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- All Locations -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationId + '">' + data[i].LocationName + '</option>');
                }
                $("#Location").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function EmployeeSearch() {

        $(".selUser").select2({
            ajax: {
                url: "/Home/GetEmployeeSearch",
                type: "get",
                dataType: 'json',

                //delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term // search term
                    };
                },
                processResults: function (response) {
                    return {
                        results: response
                    };
                },
                cache: true
            },
            minimumInputLength: 4
        });
    }
    function LoadData() {
        $('#tblCategory').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Custom/AjaxGetCellPhoneApprover",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "CategoryId" },
                { "sName": "Location" },

                { "sName": "InchageEmp" },
                       {
                           "sName": "CategoryId",
                           "bSortable": false,
                           "render": function (data, row, r) {
                               //console.log(r);
                               return '<div class="btn-group">' +
                                   '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
                                   '<ul class="dropdown-menu dropdown-menu-right">' +
                                   '<li><a href="javascript:void(0);"  onclick="onEdit(' + data + ')">Edit</a></li>' +
                                   '<li><a href="javascript:void(0);"  onclick="onDelete(' + data + ')">Delete</a></li>' +
                                   '</ul></div>';
                           }
                       }
            ]
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");
    }
    function OnclickSaveCategory() {
        validateCategory();
        if (validate) {
            var task = {
                Id:eId,

                LocationId: $("#Location").val(),

                ApproverId: $("#InchargeEmpId").val()
            };
            debugger;
            $.ajax({
                type: "POST",
                url: "/Custom/Save_UpdateCellPhoneApprover",
                data: task,
                success: function (data) {
                    $("#myModalCategoryType").modal('hide');
                    //alert(data);
                    clearAll(); LoadData();
                    console.log("Approver added successfully")
                }
            });
        }
        //else {
        //    alert("Fields Required");
        //}
    }
    function validateCategory() {
        validate = true;
        $(".css-error").removeClass('css-error');
        if ($("#Location").val() == "") {
            $("#Location").addClass('css-error');
            validate = false;
        }
        if ($("#InchargeEmpId").val() == "") {
            $("#InchargeEmpId").addClass('css-error');
            validate = false;
        }
      
    }
    function onEdit(id) {
        eId = id;
        $.get("/Custom/GetCellPhoneApproverById?id=" + id, function (res) {
            debugger;
            $("#InchargeEmpId").select2("trigger", "select", { data: { id: res.model.ApproverId, text: res.inChargeEmp } });

            $("#Location").val(res.model.CanteenLocation);
            $("#myModalCategoryType").modal('show');
      $("#header").text("Update");
        });

    }
    function clearAll() {
        $("#header").text("New Approver");
        $(".css-error").removeClass('css-error');
        $("#Location").val("");
        $("#InchargeEmpId").select2("trigger", "select", { data: { id: "", text: "" } });
        eId = 0;
    }
          function onDelete(id) {
        if (confirm('Are you sure you want to delete?')) {
            $.getJSON("@Url.Action("DeleteCellPhoneApprover", "Custom")", { id: id }, function (data) {
                clearAll();
                LoadData();
            });
        } return false;
    }
</script>
<div class="panel panel-default">
    <div class="panel-heading" style="height:35px;background: #FEC20E;"><a href="#" data-toggle="modal" class="pull-right" style="color:white;" data-target="#myModalCategoryType">New Approver</a></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Location</th>
                    <th>Approver</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div id="myModalCategoryType" class="modal fade" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="clearAll();">×</button>
                <h4 class="modal-title" id="header">New Approver</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name"> Location<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="Location" class="form-control">
                            <option value="">All Location</option>
                        </select>
                    </div>
                </div>

                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Approver<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="InchargeEmpId" style="width: 280px" class="form-control typeahead border-primary selUser" name="query" data-provide="typeahead" autocomplete="off"></select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <input type="button" id="btnasigntask" value="Save" onclick="OnclickSaveCategory();" class="btn btn-primary">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearAll();">Close</button>
            </div>
        </div>

    </div>
</div>

