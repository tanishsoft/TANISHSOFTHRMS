@model WebApplicationHsApp.Models.PrintMobileViewModel
@{
    Layout = null;
}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<script>
            window.onload = function () { window.print(); }
