
<script>
    var eId = 0;
    $(document).ready(function () {
        $('.error1').hide();
        LoadData();
        EmployeeSearch();
        LoadCateen();
    });
    // load employe
    function EmployeeSearch() {

        $("#EmpId").select2({
            ajax: {
                url: "/Home/GetEmployeeSearch",
                type: "get",
                dataType: 'json',

                //delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term // search term
                    };
                },
                processResults: function (response) {
                    return {
                        results: response
                    };
                },
                cache: true
            },
            minimumInputLength: 4
        });
    }
    //load canteen
    function LoadCateen() {
        $.ajax({
            type: "POST",
            url: "/CMS/GetStore",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Cateen -</option>');
                for (var i = 0; i < data.length; i++) {
                    if (data[i].TypeOf == "Canteen") {
                        options.push('<option value="' + data[i].StoreId + '">' + data[i].StoreName + '</option>');
                    }
                }
                $("#StoreId").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadData() {
        $('#tblCategory').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/CMS/AjaxGetCMSCanteenEmployee",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "Id" },
                { "sName": "EmpId" },
                { "sName": "StoreId" },

                //{ "sName": "IsActive" },
                {
                    "sName": "id",
                    "bSortable": false,
                    "render": function (data) {
                        return '<a href="javascript:void(0);" id="' + data + '" class="btn btn-success" onclick="Edit(this.id);"><span class="glyphicon glyphicon-edit"></span></a>&nbsp;' +
                            '<a href="javascript:void(0);" id="' + data + '" class="btn btn-danger" onclick="Delete(this.id);"><span class="glyphicon glyphicon-trash"></span></a>';
                    }
                }
            ]
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");
    }
    function Edit(id) {
        eId = id;
        var Url = "/CMS/GetCanteenEmployee?id=" + id;
        $.ajax({
            type: "GET",
            url: Url,
            success: function (res) {
                $("#myModalCategoryType").modal('show');
                $("#EmpId").select2("trigger", "select", { data: { id: res.model.EmpId, text: res.Emp } });
                $("#StoreId").val(res.model.StoreId);

            }
        })
    }
    function clearAll() {
        $("#header").text("Add New");
        $(".css-error").removeClass('css-error');

        $("#StoreId").val();
        $("#EmpId").select2("trigger", "select", { data: { id: "", text: "" } });
        eId = 0;
    }
    function OnclickSaveCategory() {
        validateCategory();
        if (validate) {
            var task = {
                StoreEmpId: eId,
                StoreId: $("#StoreId").val(),
                EmpId: $("#EmpId").val(),
                IsActive: true
            };

            $.ajax({
                type: "POST",
                url: "/CMS/Save_UpdateCMSCanteenEmployee",
                data: task,
                success: function (data) {
                    $("#myModalCategoryType").modal('hide');
                    //alert(data);
                    clearAll(); LoadData();
                    console.log("category added successfully")
                }
            });
        }
        //else {
        //    alert("Fields Required");
        //}
    }
    function validateCategory() {
        setTimeout(function () { $('.error1').fadeOut('fast'); }, 5000);
        validate = true;
        $(".css-error").removeClass('css-error');


        if ($("#StoreId").val() == "") {
            $("#StoreId").addClass('css-error');
            validate = false;
        }


        if ($("#EmpId").val() == null) {
            $('.error1').show();
            $('.error1').text("Select  Employee");
            validate = false;
        }

    }
    function Delete(id) {
        if (confirm('Are you sure you want to delete?')) {
            $.getJSON("@Url.Action("DeleteCMCanteenEmployee", "CMS")", { id: id }, function (data) {
                clearAll();
                LoadData();
            });
        } return false;
    }
</script>

<div class="panel panel-default">
    <div class="panel-heading" style="height:35px;background: #FEC20E;"><a href="#" data-toggle="modal" class="pull-right" style="color:white;" data-target="#myModalCategoryType">New</a></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Employee</th>
                    <th>Canteen</th>

                    @*<th>Is Active</th>*@
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div id="myModalCategoryType" class="modal fade" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="clearAll();">×</button>
                <h4 class="modal-title" id="header">Add New CanteenEmployee</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger error1" role="alert">

                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Canteen<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="StoreId" class="form-control" name="ddltype">
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Employee<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="EmpId" style="width:280px;" class="form-control typeahead border-primary" name="query" data-provide="typeahead" autocomplete="off"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnasigntask" value="Save" onclick="OnclickSaveCategory();" class="btn btn-primary">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearAll();">Close</button>
            </div>
        </div>

    </div>
</div>