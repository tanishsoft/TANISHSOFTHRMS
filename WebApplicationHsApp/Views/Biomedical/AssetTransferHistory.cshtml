
@{
    ViewBag.Title = "Asset Transfer History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        loaddata();
    });
    function loaddata() {
        $('#tbl_Asset').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Biomedical/AjaxGetAssetTransferHistory",
            "bProcessing": true,
            "bDestroy": true,
            "scrollX": true,
            //"scrollX": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "AssetTransferId" },
                { "sName": "FromLocation" },
                { "sName": "FromDepartment" },
                { "sName": "ToLocation" },
                { "sName": "ToDepartment" },
                { "sName": "AssetNo" },
                { "sName": "AssetModel" },
                { "sName": "CreatedBy" },
                { "sName": "ReasonForTranfer" },
              
                 {
                     "sName": "Document",
                    "bSortable": false,
                    "render": function (data) {
                        return '<a href="/Documents/AdministrationDocuments'+data+'" target="_blank">View</a>';
                    }
                },
             
                { "sName": "CreatedOn" }
                
            ]
        });
    }
</script>

<div class="panel panel-default">
    <div class="panel-heading">Asset Transfer History&nbsp;&nbsp;</div>
    <div class="panel-body">
       
        <table class="table table-striped table-bordered nowrap" style="width:100%;" id="tbl_Asset">
            <thead>
                <tr style="background-color: #786C67;color: white;">
                    <th> Id</th>
                    <th>From Location</th>
                    <th>From Department</th>
                    <th>To Location</th>
                    <th>To Department</th>
                    <th>Asset No</th>
                    <th>Model</th>
                    <th>Transfer Done By</th>
                    <th>Reason ForTranfer</th>
                    <th>Document</th>
                    <th>Transfer Done On</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
