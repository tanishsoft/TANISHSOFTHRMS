@{
    ViewBag.Title = "ManageNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        LoadLocations1();
        datatablebind();
        $("#NotificationDate").datepicker();
    });
    function Applyclassdt() {
        $("#myDataTable_length").addClass("col-md-6");
        $("#myDataTable_info").addClass("col-md-6");

    }
    function datatablebind() {
        $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Home/AjaxNotification",
            "bProcessing": true,
            "bDestroy": true,
            "aoColumns": [
                            { "sName": "NotificationId" },
                            { "sName": "Notification" },
                            { "sName": "NotificationFrom" },
                            { "sName": "NotificationTo" },
                            { "sName": "NotificationDate" },
                            { "sName": "CreatedOn" },


                            {
                                "sName": "NotificationId",
                                "bSortable": false,
                                "render": function (data) {
                                    return '<span>Action</span>';
                                }
                            }

            ],
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, 500, 1000], [10, 20, 30, 50, 100, 150, 200, 500, 1000]]           
        });
        Applyclassdt();
    }
    function LoadLocations1() {
        $.ajax({
            type: "POST",
            url: "/Common/GetLocations",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Location -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationId + '">' + data[i].LocationName + '</option>');
                }
                $("#ddlLocation1").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadDepartment1() {
        $.ajax({
            type: "POST",
            url: "/Common/GetDepartmentByLocation",
            data: "id=" + $("#ddlLocation1").val(),
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Department -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].DepartmentId + '">' + data[i].DepartmentName + '</option>');
                }
                $("#ddlDepartment1").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadEmployees() {
        $.ajax({
            type: "POST",
            url: "/Common/GetEmployeesByDepartment",
            data: "id=" + $("#ddlDepartment1").val(),
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Employee -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].CustomUserId + '">' + data[i].FirstName + " " + data[i].LastName + '</option>');
                }
                $("#ddlEmployees1").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }

    function SaveNewNotification() {
        if (ValidateBeforeSubmit()) {
            var tdata = {
                Notification: $("#NotificationComment").val(),
                NotificationTo: $("#ddlEmployees1").val(),
                ToDeptId: $("#ddlDepartment1").val(),
                ToLocationId: $("#ddlLocation1").val(),
                NotificationDate: $("#NotificationDate").val()
            };
            $.ajax({
                type: "POST",
                url: "/Home/SaveNewNotification",
                data: tdata,
                success: function (data) {
                    $("#myModal").modal("hide");
                    datatablebind();
                },
                error: function () {
                    alert("error")
                }
            });
        }
    }
    function ValidateBeforeSubmit() {
        var valid = true;
        if ($("#ddlLocation1").val() == null || $("#ddlLocation1").val().replace(" ", "") == "") {
            valid = false
        }
        if ($("#ddlDepartment1").val() == null || $("#ddlDepartment1").val().replace(" ", "") == "") {
            valid = false
        }
        if ($("#ddlEmployees1").val() == null || $("#ddlEmployees1").val().replace(" ", "") == "") {
            valid = false
        }
        if ($("#NotificationComment").val() == null || $("#NotificationComment").val().replace(" ", "") == "") {
            valid = false
        }
        if ($("#NotificationDate").val() == null || $("#NotificationDate").val().replace(" ", "") == "") {
            valid = false
        }
        return valid;
    }
</script>
<div class="panel panel-default">
    <div class="panel-heading">Manage Notification <span class="pull-right" style="color:green;font-weight:bold;cursor:pointer;" data-toggle="modal" data-target="#myModal">New Notification</span></div>
    <div class="panel-body">

        <table id="myDataTable" class="table table-striped table-bordered  dt-responsive " style="width:100%;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Notification</th>
                    <th> From</th>
                    <th> To  </th>
                    <th>Notification Date</th>
                    <th>Created On</th>
                    <th>Action </th>

                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Task</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Location<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="ddlLocation1" class="form-control" onchange="LoadDepartment1();">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4"><label for="name">Department</label></div>
                    <div class="col-md-8">
                        <select id="ddlDepartment1" class="form-control" onchange="LoadEmployees();">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4"><label for="name">Employee<span style="color:red;">*</span></label></div>
                    <div class="col-md-8">
                        <select id="ddlEmployees1" class="form-control">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4"><label for="name">Comment<span style="color:red;">*</span></label></div>
                    <div class="col-md-8">
                        <textarea class="form-control" id="NotificationComment"></textarea>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4"><label for="name">Notification Date<span style="color:red;">*</span></label></div>
                    <div class="col-md-8">
                        <input type="text" id="NotificationDate" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnsavetaskdata" value="Save" class="btn btn-primary" onclick="SaveNewNotification();" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
