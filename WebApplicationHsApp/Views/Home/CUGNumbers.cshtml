@model IEnumerable<WebApplicationHsApp.DataModel.tbl_CugList>
@{
    ViewBag.Title = "CUGNumbers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script>
    $(document).ready(function () {
        $('#tbltable').dataTable();
    });
    function ExportExcelCugNumbers() {
        window.location = "/Home/ExportExcel_CugNumbers";
    }
</script>

<div class="panel panel-default">
    <div class="panel-heading">CUG Numbers <span style="cursor:pointer;" class="pull-right" onclick="ExportExcelCugNumbers();">Export To Excel</span></div>
    <div class="panel-body">


        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                <table class="table table-bordered dataTable" id="tbltable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Extension)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Extension)
                                </td>


                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <div class="col-md-2">

            </div>

        </div>
    </div>
</div>
