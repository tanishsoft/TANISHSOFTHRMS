@{
    ViewBag.Title = "BookRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        LoadCalender();

    });
    function LoadCalender() {

        $('#calendar').fullCalendar({
            theme: true,
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'agendaWeek,agendaDay'
            },

            //defaultDate: '2016-06-12',
            editable: false,

            eventLimit: true, // allow "more" link when too many events
            events: '/Calender/GetBookingEvents/',
            eventClick: function (calEvent, jsEvent, view) {
                evetclikdeid = calEvent.id;
                fullinfo(calEvent.id);
            },

        });

    }
    //function fullinfo(id) {
    //    alert(id);
    //}
    function fullinfo(id) {
        eventcurrentid = id;
        $.get('/Calender/GetFullBookingEvent?EventId=' + id, function (data) {
            if (data != "NA") {
                $("#lblEventDescription").html(data.EventDescription);
                $("#lblEventDate").html(data.FromDate);
                $("#lblToDate").html(data.ToDate);
                $("#lblEventDuration").html(data.StartTime);
                $("#lblEven").html(data.EndTime);
                $("#lblLocationName").html(data.LocationName);
                $("#lblBuildingName").html(data.BuildingName);
                $("#lblFloorName").html(data.FloorName);
                $("#lblRoomName").html(data.UGC_Extension);
                $("#nochair").html(data.Chair);
                $("#notables").html(data.Tables);
                $("#lblitreqs").html(data.ITReq);
                $("#lblphto").html(data.video);
                $("#lblseat").html(data.Arrangemnts);
                $("#lblemailid").html(data.EmailID);
                $("#lblloca").html(data.DepartLocation);
                $("#lblEmp").html(data.NameEmpl);
                $("#myModal2").modal('show');
            } else {
                alert("We are unable to find the Event");
            }
        });
    }
</script>

<div id='calendar'></div>
<div id="myModal2" class="modal fade" role="dialog">
