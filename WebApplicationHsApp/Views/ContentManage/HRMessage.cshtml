@model WebApplicationHsApp.DataModel.tbl_Settings
@{
    ViewBag.Title = "HRMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/ckeditor/ckeditor.js"></script>

<div class="panel panel-default">
    <div class="panel-heading">HR Notifications </div>
    <div class="panel-body">
        @if (ViewBag.message != null && ViewBag.message != "")
        {
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Well done!</strong> You successfully updated.
            </div>
        }
        <div class="col-lg-12">

            @using (Html.BeginForm("HRMessage", "ContentManage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextAreaFor(m => m.SettingValue)
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        CKEDITOR.replace('SettingValue', {
            height: '350px',
            extraPlugins: 'forms'
        });
    });
</script>
