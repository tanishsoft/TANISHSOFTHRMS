@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        LoadData();
    });

    function LoadData() {
        $('#tblCategory').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/InPatientCms/AjaxGetCMpOrderRequest",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "Id" },
                { "sName": "DateOfOrder" },
                { "sName": "MealTypeId" },
                { "sName": "LocationId" },
                { "sName": "FloorId" },
                { "sName": "RequestUserId" },
                { "sName": "RequestNotes" },
                { "sName": "CurrentStatus" },
                       {
                           "sName": "CategoryId",
                           "bSortable": false,
                           "render": function (data, row, r) {
                               //console.log(r);
                               return '<div class="btn-group">' +
                                   '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
                                   '<ul class="dropdown-menu dropdown-menu-right">' +
                                   '<li><a href="javascript:void(0);"  onclick="Edit(' + data + ')">Edit</a></li>' +
                                 //  '<li><a href="javascript:void(0);"  onclick="onDelete(' + data + ')">Delete</a></li>' +
                                   '</ul></div>';
                           }
                       }
            ]
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");

        $('#tblCategory2').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/InPatientCms/AjaxGetCMpOrderRequestAttendendent",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "Id" },
                { "sName": "DateOfOrder" },
                { "sName": "MealTypeId" },
                { "sName": "LocationId" },
                { "sName": "FloorId" },
                { "sName": "RequestUserId" },
                { "sName": "RequestNotes" },
                { "sName": "CurrentStatus" },
                {
                    "sName": "CategoryId",
                    "bSortable": false,
                    "render": function (data, row, r) {
                        //console.log(r);
                        return '<div class="btn-group">' +
                            '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
                            '<ul class="dropdown-menu dropdown-menu-right">' +
                            '<li><a href="javascript:void(0);"  onclick="Edit2(' + data + ')">Edit</a></li>' +
                            //  '<li><a href="javascript:void(0);"  onclick="onDelete(' + data + ')">Delete</a></li>' +
                            '</ul></div>';
                    }
                }
            ]
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");
    }
    function Edit(id) {
        window.location.href = "/InPatientCms/EditOrderRequest?id=" + id + "&status=InNursing";
    }

    function Edit2(id) {
        window.location.href = "/InPatientCms/EditOrderRequestAttendendent?id=" + id + "&status=InNursing";
    }

    function onDelete(id) {
        if (confirm('Are you sure you want to delete?')) {
            $.getJSON("@Url.Action("DeleteCMStock", "CMS")", { id: id }, function (data) {
                clearAll();
                LoadData();
            });
        } return false;
    }
    function New()
    {
        window.location.href = '/InPatientCms/CreateOrderRequest';
    }
    function New2() {
        window.location.href = '/InPatientCms/CreateOrderRequestAttendant';
    }


</script>
<div style="min-height:500px;">
    <div class="panel panel-default">
        <div class="panel-heading" style="height:35px;background: #FEC20E; color:white;">Manage Orders<a href="#" class="pull-right" style="color:white;" onclick="New();">New</a></div>
        <div class="panel-body">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
                <thead>
                    <tr style="background-color:chocolate;color:white;">
                        <th>Id</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Floor</th>
                        <th>MealType</th>
                        <th>Requested User</th>
                        <th>Notes</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


