
@{
    ViewBag.Title = "Kitchen Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        LoadData();
        LoadMealType();
        LoadMealType2();
        LoadLocations();
    });
    function LoadLocations() {
        $.ajax({
            type: "GET",
            url: "/InPatientCms/GetCMSP_Location",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">Select</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationName + '">' + data[i].LocationName + '</option>');
                }
                $(".LocationId").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadData() {
        $('#tblCategory').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/InPatientCms/AjaxGetCMpInKitchenOrderRequest",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "Id" },
                { "sName": "DateOfOrder" },
                { "sName": "MealTypeId" },
                { "sName": "LocationId" },
                { "sName": "FloorId" },
                { "sName": "RequestUserId" },
                { "sName": "RequestNotes" },
                { "sName": "CurrentStatus" },
                       {
                           "sName": "CategoryId",
                           "bSortable": false,
                           "render": function (data, row, r) {
                               //console.log(r);
                               return '<div class="btn-group">' +
                                   '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
                                   '<ul class="dropdown-menu dropdown-menu-right">' +
                                   '<li><a href="javascript:void(0);"  onclick="Edit(' + data + ')">Edit</a></li>' +
                                 //  '<li><a href="javascript:void(0);"  onclick="onDelete(' + data + ')">Delete</a></li>' +
                                   '</ul></div>';
                           }
                       }
            ],
            "fnServerParams": function (aoData) {
                aoData.push(
                    { "name": "locationname", "value": $("#TodayLocationId").val() },
                    { "name": "floor", "value": $("#TodayFloorId").val() },
                    { "name": "MealType", "value": $("#TodayMealTypeId").val() }
                );
            }
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");
    }
    function Edit(id) {
        window.location.href = "/InPatientCms/EditOrderRequest?id=" + id +"&status=InKitchen";
    }

    function LoadMealType() {
        $.ajax({
            type: "POST",
            url: "/CMS/GetMealType",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select MealType -</option><option value="0">All</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].MealTypeId + '">' + data[i].MealTypeName + '</option>');
                }
                $("#ddlselectmealtype").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }

    function onDelete(id) {
        if (confirm('Are you sure you want to delete?')) {
            $.getJSON("@Url.Action("DeleteCMStock", "CMS")", { id: id }, function (data) {
                clearAll();
                LoadData();
            });
        } return false;
    }
    function New() {
        window.location.href = '/InPatientCms/CreateOrderRequest';
    }

    function LoadKitchenOrders() {
        $("#ddlbody").html("");
        $.get("/InPatientCms/LoadKitchenOrders?mealTypeId=" + $("#ddlselectmealtype").val(), function (data) {
            var html = "<table style='width:80%;margin:auto;' class='table table-bordered'><tr style='background-color:teal;color:white;'><td>Location</td><td>Diet variety</td><td>Count</td><td>Customizations</td></tr>";
            for (var i = 0; i < data.length; i++) {
                html += "<tr><td>" + data[i].Location + "</td><td>" + data[i].DietName + "</td><td>" + data[i].Count + "</td><td>" + data[i].Customizations + "</td></tr>";
            }
            $("#ddlbody").html(html);
        });
    }
    function SendOrdersToSupervisor() {
        $.get("/InPatientCms/SendKitchenOrdersToSupervisor?mealTypeId=" + $("#ddlselectmealtype").val(), function (data) {
            alert(data);
            LoadKitchenOrders();
        });
    }
    function SendOrdersToSupervisorExportExcel() {

        window.location = "/InPatientCms/SendOrdersToSupervisorExportExcel?mealTypeId=" + $("#ddlselectmealtype").val();
    }
    function LoadMealType2() {
        $.ajax({
            type: "GET",
            url: "/CMS/GetMealType",
            //data: "id=",
            success: function (data) {

                var options = [];
                options.push('<option value="0">- Select MealType -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].MealTypeId + '">' + data[i].MealTypeName + '</option>');
                }
                $(".MealTypeId").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadTodayFloorByLocations() {
        var id = $("#TodayLocationId").val();
        if (id != "") {
            $.ajax({
                type: "GET",
                url: "/InPatientCms/GetCMSP_FloorByLocation?id=" + id,
                //data: "id=",
                success: function (data) {
                    var options = [];
                    options.push('<option value="">Select</option>');
                    for (var i = 0; i < data.length; i++) {
                        options.push('<option value="' + data[i].FloorNo + '">' + data[i].FloorNo + '</option>');
                    }
                    $("#TodayFloorId").html(options.join(''));
                },
                error: function () {
                    alert("error")
                }
            });
        }
        else {
            $("#TodayFloorId").html('<option value="">Select</option>');
        }
    }
</script>
<div style="min-height:500px;">
    <div class="bs-example bs-example-tabs" data-example-id="togglable-tabs">
        <ul class="nav nav-tabs" id="myTabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true"><span class="glyphicon glyphicon-arrow-right"></span>&nbsp;Kitchen Manager</a>
            </li>
            <li role="presentation" class="">
                <a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="false">All Kitchen Manager Requests</a>
            </li>

        </ul>
        <div class="tab-content" id="myTabContent" style="padding:10px;">
            <div class="tab-pane fade active in" role="tabpanel" id="home" aria-labelledby="home-tab">
                <div style="height:450px;">
                    <table style="width:60%;margin:auto;">
                        <tr>
                            <td>Meal type</td>
                            <td>
                                <select id="ddlselectmealtype" class="form-control" onchange="LoadKitchenOrders();">
                                    <option value="">Select Meal Type</option>
                                </select>
                            </td>
                            <td><input type="button" value="Send to Supervisor" onclick="SendOrdersToSupervisor();" class="btn btn-warning" /> </td>
                            <td><input type="button" value="Export Excel" onclick="SendOrdersToSupervisorExportExcel();" class="btn btn-success" /> </td>
                        </tr>
                    </table>
                    <div id="ddlbody" style="margin-top:15px;">

                    </div>
                </div>

            </div>
            <div class="tab-pane fade" role="tabpanel" id="profile" aria-labelledby="profile-tab">
                <div class="form-row">
                    <div class="col-md-1">
                        &nbsp;
                    </div>
                    <div class="form-group col-md-2">
                        <label>Meal Type :<span style="color:red;">*</span></label>
                        <select class="form-control MealTypeId" id="TodayMealTypeId">
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Location :<span style="color:red;">*</span></label>
                        <select class="form-control LocationId" id="TodayLocationId" onchange="LoadTodayFloorByLocations();"></select>
                    </div>
                    <div class="form-group col-md-2">
                        <label>Floor :<span style="color:red;">*</span></label>
                        <select class="form-control FloorId" id="TodayFloorId"></select>
                    </div>
                    <div class="form-group col-md-1">
                        <br />
                        <input type="button" class="btn sm btn-danger form-control" onclick="LoadData();" value="go" />
                    </div>

                </div>
                <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
                    <thead>
                        <tr style="background-color:chocolate;color:white;">
                            <th>Id</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Floor</th>
                            <th>Meal Type</th>
                            <th>Requested User</th>
                            <th>Notes</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
