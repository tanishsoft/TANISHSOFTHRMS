@using WebApplicationHsApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #loginForgotpassword a {
        color: white;
    }
</style>

<div class="row" style="min-height: 500px; padding-top: 50px;">
    <div class="col-md-4">
        &nbsp;
    </div>
    <div class="col-md-4">
        <div class="panel panel-default" style=" border-color: #eee; border-top: 5px solid #786C67; border-radius: 10px;  ">
            <div class="panel-heading">Login To Tanishsoft Hrms Intranet</div>
            <div class="panel-body" style="padding:30px;">



                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.UserId, new { @class = " control-label" })
                            <span class="glyphicon glyphicon-user" style="color:white;"></span>
                            <span style="color:white;">*</span>
                        </div>

                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.Password, new { @class = " control-label" })
                            <span class="glyphicon glyphicon-eye-open" style="color:white;"></span>
                            <span style="color:white;">*</span>
                        </div>
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6" style="text-align:right;">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div class="col-md-5" id="loginForgotpassword">
                            @*<p >*@
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            @*</p>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:center;">
                            <input type="submit" value="Log in" class="btn btn-warning" style="background-color: #FEC20E; padding: 7px; padding-left: 25px; padding-right: 25px; font-size: 16px;" />
                        </div>
                    </div>
                    @*<p>
                            @Html.ActionLink("Register as a new user", "EmployeeRegister")
                        </p>*@


                }

            </div>
        </div>
    </div>
    <div class="col-md-4">
        &nbsp;
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

