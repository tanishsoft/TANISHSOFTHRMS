    }

    function clearAll() {
        $("#LeaveName").val("");
        $("#MaxLeavePerMonth").val("");
        $("#MinLeavePerMonth").val("");
        $("#NoOfTimesPerYear").val("");
    }
</script>
<div class="panel panel-default">
    <div class="panel-heading">Leave Types Vs Role <a href="#" data-toggle="modal" class="pull-right" data-target="#myModalLeaveType">New Leave Type / Role</a></div>
    <div class="panel-body">
        <table id="listLeaveTypes" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Leave Name</th>
                    <th>Role</th>
                
                    <th>Is Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tblbodyleavetyeps"></tbody>
        </table>
