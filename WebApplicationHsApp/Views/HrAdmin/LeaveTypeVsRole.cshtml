
@{
    ViewBag.Title = "LeaveTypeVsRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var validate = true;
    $(document).ready(function () {
        GetRoles();

        BindLeaves();
    });
    function GetRoles() {
        $.ajax({
            type: "GET",
            url: "/Common/GetAllRoles",
            //data: "id=" + id,
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Role -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].Id + '">' + data[i].Name + '</option>');
                }
                $("#ddlRoles").html(options.join(''));
            }
        });
    }

    function BindLeaves() {
        $.ajax({
            type: "GET",
            url: "/HrAdmin/GetLeaveTypes",
            //data: "id=" + $("#ddlDepartment1").val(),
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Leave Type -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LeaveTypeId + '">' + data[i].LeaveName + '</option>');
                }
                $("#ddlLeaveType").html(options.join(''));
            
            },
            error: function () {
                alert("error")
            }
        });
    }
    function Delete(id) {
        if (confirm("Are you Sure you want to delete ?")) {
            $.ajax({
                type: "GET",
                url: "/HrAdmin/DeleteLeaveTypeVsRole",
                data: "id=" + id,
                success: function (data) {

                    //alert(data);
                    BindLeaves();

                },
                error: function () {
                    alert("error")
                }
            });
        }
    }
    function SaveLeaveTypes() {
        validateLeave();

        if (validate) {


            var task = {
                LeaveTypeId: $("#ddlLeaveType").val(),
                RoleId: $("#ddlRoles").val(),
              
                IsActive: true
            };
            $.ajax({
                type: "GET",
                url: "/HrAdmin/SaveLeaveTypeVsRole",
                data: task,
                success: function (data) {
                    $("#myModalLeaveType").modal('hide');
                    //alert(data);
                    BindLeaves();
                    clearAll();
                },
                error: function () {
                    alert("error")
                }
            });
        }
        else {
            alert("Fields Required");
        }

    }
    function validateLeave() {
        validate = true;
        //$(".css-error").removeClass('css-error');
        //if ($("#LeaveName").val() == "") {
