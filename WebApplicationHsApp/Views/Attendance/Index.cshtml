            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            //"aaSorting": [[0, "desc"]],
            "aoColumns": [
                       { "sName": "employeeid" },
                       { "sName": "FirstName" },
                       { "sName": "att_date" },
                       { "sName": "in_time" },
                       { "sName": "out_time" },
                       { "sName": "latein" },
