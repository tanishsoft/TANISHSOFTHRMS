
@{
    ViewBag.Title = "ManageDrug";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        LoadData();
        LoadLocation();

        $("#DrugExpiryDate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy",
            minDate: 0
        });
    });
    function LoadLocation() {
        $.ajax({
            type: "GET",
            url: "/Admin/GetLocationView",
            success: function (data) {

                var options = [];
                options.push('<option value="">- Select Location -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationId + '">' + data[i].LocationName + '</option>');
                }
                $("#ddlLocation").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadFloor() {
        $.ajax({
            type: "GET",
            url: "/Admin/GetFloorsByDepartmentId",
            data: "id=" + $("#ddlDepartment").val(),
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Floor -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].FloorId + '">' + data[i].FloorName + '</option>');
                }
                $("#ddlFloor").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
        $.ajax({
            type: "GET",
            url: "/Admin/GetSubDepartmentsByDepartment",
            data: "id=" + $("#ddlDepartment").val(),
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Sub Department -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].SubDepartmentId + '">' + data[i].Name + '</option>');
                }
                $("#ddlSubDepartment").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }

    function LoadDepartment() {
        if ($("#ddlLocation").val() != null && $("#ddlLocation").val() != "") {
            $.ajax({
                type: "POST",
                url: "/Common/GetDepartmentByLocation",
                data: "id=" + $("#ddlLocation").val(),
                success: function (data) {
                    var options = [];
                    options.push('<option value="">- Select Department -</option>');
                    for (var i = 0; i < data.length; i++) {
                        options.push('<option value="' + data[i].DepartmentId + '">' + data[i].DepartmentName + '</option>');
                    }
                    $("#ddlDepartment").html(options.join(''));
                },
                error: function () {
                    alert("error")
                }
            });
        }
    }
    function LoadData() {
        $('#tbltable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Admin/AjaxGetDrugs",
            "bProcessing": true,

            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            //"aaSorting": [[0, "desc"]],
            "aoColumns": [

                       { "sName": "Location" },
                       { "sName": "DepartmentName" },
                       { "sName": "Floor" },
                       { "sName": "DrugId" },
                       { "sName": "DrugName" },
                       { "sName": "StockTotal" },
                       { "sName": "DrugExpiryDate" },

                       {
                           "sName": "DrugId",
                           "bSortable": false,
                           "render": function (data) {
                               return '<div class="btn-group">' +
    '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
    '<ul class="dropdown-menu dropdown-menu-right">' +
    '<li><a href="javascript:void(0);" id="' + data + '" onclick="DeleteEmployee(this.id);">Delete</a></li>' +
    '</ul></div>';
                           }
                       }
            ],
            "fnServerParams": function (aoData) {
                //aoData.push(
                //    { "name": "locationid", "value": $("#ddlLocationForFilter").val() },
                //    { "name": "departmentid", "value": $("#ddlDepartmentForFilter").val() }
                //);
            }

        });
        $("#tbltable_length").addClass("col-md-6");
        $("#tbltable_length").addClass("col-md-6");
    }
    function Addnewdrug() {
        $("#ManageDrugModal").modal('show');
    }
    function SaveDrug() {
        var task = {
            DrugName: $("#DrugName").val(),
            StockTotal: $("#StockTotal").val(),
            DrugDescription: $("#DrugDescription").val(),
            DrugExpiryDate: $("#DrugExpiryDate").val(),
            DepartmentId: $("#ddlDepartment").val(),
            SubDepartmentId: $("#ddlSubDepartment").val(),
            LocationId: $("#ddlLocation").val(),
            FloorId: $("#ddlFloor").val(),
            IsActive: true
        };
        $.ajax({
            type: "POST",
            url: "/Admin/SaveDrug",
            data: task,
            success: function (data) {
                $("#ManageDrugModal").modal('hide');
                alert(data);
                LoadData();
                console.log("category added successfully")
            }
        });
    }
</script>

<div class="panel panel-default">
    <div class="panel-heading">
        Manage Drug
        <a href="javascript:void(0);" class="pull-right" style="color:green;font-weight:bold;cursor:pointer;" onclick="Addnewdrug();">Add Drug</a>
    </div>

    <div class="panel-body">
        <table id="tbltable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;">
            <thead>
                <tr>
                    <th>Location</th>
                    <th>Department</th>
                    <th>Floor</th>
                    <th>Drug Id</th>
                    <th>Drug Name</th>
                    <th>Stock Total</th>
                    <th>Drug Expiry Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<div id="ManageDrugModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Add Drug</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding:5px;">
                    <div class="col-md-10">
                        <table class="table" style="width:100%;">
                            <tr>
                                <td>Drug Name<span style="color:red;">*</span></td>
                                <td>
                                    <input type="text" class="form-control" id="DrugName" />
                                </td>
                            </tr>
                            <tr>
                                <td>Stock Total<span style="color:red;">*</span></td>
                                <td>
                                    <input type="number" class="form-control" id="StockTotal" />
                                </td>
                            </tr>
                            <tr>
                                <td>Description<span style="color:red;">*</span></td>
                                <td>
                                    <input type="text" class="form-control" id="DrugDescription" />
                                </td>
                            </tr>
                            <tr>
                                <td>Expiry Date<span style="color:red;">*</span></td>
                                <td>
                                    <input  type="text" class="form-control" id="DrugExpiryDate" />
                                </td>
                            </tr>
                            <tr>
                                <td>Location<span style="color:red;">*</span></td>
                                <td>
                                    <select id="ddlLocation" class="form-control" onchange="LoadDepartment();"></select>
                                </td>
                            </tr>
                            <tr>
                                <td>Department<span style="color:red;">*</span></td>
                                <td>
                                    <select id="ddlDepartment" class="form-control" onchange="LoadFloor();"></select>
                                </td>
                            </tr>
                            <tr>
                                <td>Sub Department<span style="color:red;">*</span></td>
                                <td>
                                    <select id="ddlSubDepartment" class="form-control"></select>
                                </td>
                            </tr>
                            <tr>
                                <td>Floor<span style="color:red;">*</span></td>
                                <td>
                                    <select id="ddlFloor" class="form-control"></select>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-primary" type="button" value="Add" onclick="SaveDrug();" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
