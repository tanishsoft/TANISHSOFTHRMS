        }
    }

</script>
<div class="panel panel-default">
    <div class="panel-heading">Manage Department Category<a href="#" data-toggle="modal" class="pull-right" data-target="#myModalCategoryType">New Department Category</a></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Location</th>
                    <th>Department</th>
                    <th>Category</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div id="myModalCategoryType" class="modal fade" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">Add New</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Location</label>
                    </div>
                    <div class="col-md-8">
                        <select id="ddlLocation" class="form-control" onchange="LoadDepartment();"></select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Department</label>
                    </div>
                    <div class="col-md-8">
                        <select id="ddlDepartment" class="form-control"></select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Category</label>
                    </div>
                    <div class="col-md-8">
                        <select id="ddlCategory" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnasigntask" value="Save" onclick="OnclickSaveCategoryDepartment();" class="btn btn-primary">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
