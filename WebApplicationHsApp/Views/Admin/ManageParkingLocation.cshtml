
@{
    ViewBag.Title = "Manage Parking Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<script>
    var eId = 0;
    var validate = true;
    $(document).ready(function () {
        LoadData();
        LoadLocations();
    });
    function LoadLocations() {
        $.ajax({
            type: "POST",
            url: "/Common/GetLocations",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- Select Locations -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationId + '">' + data[i].LocationName + '</option>');
                }
                $("#LocationId").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadData() {
        $('#tblCategory').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Admin/AjaxGetParkingLocation",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "Id" },
                { "sName": "LocationId" },
                { "sName": "ParkingLocation" },
                { "sName": "ParkingType" },
                { "sName": "ParkingVolume" },
                { "sName": "CreatedBy" },
                { "sName": "IsActive" },
                {
                    "sName": "Id",
                    "bSortable": false,
                    "render": function (data) {
                        return '<div class="btn-group">' +
                            '<div class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
                            '<ul class="dropdown-menu dropdown-menu-right">' +
                            '<li><a href="javascript:void(0);" id="' + data + '" onclick="Edit(this.id);">Edit</a></li>' +
                            '<li><a href="javascript:void(0);" id="' + data + '" onclick="Delete(this.id);">Delete</a></li>' +
                            '</ul></div>';
                    }
                }
            ]
        });
        $("#tblCategory_length").addClass("col-md-6");
        $("#tblCategory_length").addClass("col-md-6");
    }
    function OnclickSaveCategory() {
        validateCategory();
        var url = "/Admin/SaveNewParkingLocation";
        if (eId != 0) {
            url = "/Admin/UpdateParkingLocation";
        }
        if (validate) {
            var task = {
                Id:eId,
                LocationId: $("#LocationId").val(),
                ParkingLocation: $("#ParkingLocation").val(),
                ParkingType: $("#ParkingType").val(),
                ParkingVolume: $("#ParkingVolume").val(),
                IsActive: true
            };
            $.ajax({
                type: "POST",
                url: url,
                data: task,
                success: function (data) {
                    $("#myModalCategoryType").modal('hide');
                    //alert(data);
                    clearAll(); LoadData();
                    console.log("category added successfully")
                }
            });
        }
        else {
            alert("Fields Required");
        }
    }
    function validateCategory() {
        validate = true;
        $(".css-error").removeClass('css-error');
        if ($("#ParkingLocation").val() == "") {
            $("#ParkingLocation").addClass('css-error');
            validate = false;
        }
        if ($("#LocationId").val() == "") {
            $("#LocationId").addClass('css-error');
            validate = false;
        }
        if ($("#ParkingType").val() == "") {
            $("#ParkingType").addClass('css-error');
            validate = false;
        }
        if ($("#ParkingVolume").val() == "") {
            $("#ParkingVolume").addClass('css-error');
            validate = false;
        }
    }
    function Delete(id) {
        if (confirm("Are you sure you want to delete?")) {
            $.get("/Admin/DeleteParkingLocation?id=" + id, function (data) {
                alert("Success");
                LoadData();
            });
        }
    }
    function Edit(id) {
        eId = id;        
        $.get("/Admin/GetParkingLocationById?id=" + id, function (data) {            
            $('#LocationId').val(data[0].LocationId);
            $('#ParkingLocation').val(data[0].ParkingLocation);
            $('#ParkingType').val(data[0].ParkingType);
            $('#ParkingVolume').val(data[0].ParkingVolume);
            $("#myModalCategoryType").modal("show");
        });
    }
    function clearAll() {
        $("#LocationId").val("");
        $("#ParkingLocation").val("");
        $('#ParkingType').val("");
        $('#ParkingVolume').val("");
    }

</script>
<div class="panel panel-default">
    <div class="panel-heading"><a href="~/Register/Index">Go Back</a> &nbsp;&nbsp;Manage Parking Location<a href="#" data-toggle="modal" class="pull-right" data-target="#myModalCategoryType">New Parking Location</a></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblCategory">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Location</th>
                    <th>Parking Type</th>
                    <th>Parking Location</th>
                    <th>Parking Volume</th>
                    <th>Created By</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div id="myModalCategoryType" class="modal fade" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">Add New</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Location<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <select id="LocationId" class="form-control">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="name">Parking Location<span style="color:red;">*</span></label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="ParkingLocation" />
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4"><label for="name">Parking Type<span style="color:red;">*</span></label></div>
                    <div class="col-md-8">
                        <select class="form-control" id="ParkingType">
                            <option value="">Select</option>
                            <option value="2 Wheeler">2 Wheeler</option>
                            <option value="4 Wheeler">4 Wheeler</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding:5px;">
                    <div class="col-md-4">
                        <label for="ParkingVolume">Parking Volume(Capacity)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="number" class="form-control" id="ParkingVolume" />
                    </div>
                </div>                
            </div>
            <div class="modal-footer">
                <input type="button" id="btnasigntask" value="Save" onclick="OnclickSaveCategory();" class="btn btn-primary">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
