
@{
    ViewBag.Title = "empleaveappreport";
}


<script src="~/Scripts/CustomJS/GlobalValidation_JS.js"></script>
<script src="~/Scripts/CustomJS/GlobalFunctionJS.js"></script>

<style>
    .trCompoff {
        display: none;
    }
</style>

<script>
    $(document).ready(function () {
        LoadLocations();
        $("#ApprovedDataTable").hide();
      //  ApprovedDataTable();
        $(".btdate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy",
            maxDate: "0",
            yearRange: "-100:+0"
        });
        LoadLeaveTypes();
        //LoadLeaveTypes();
        LoadCommonDepartments();
    });
    function ApprovedDataTable() {
        $("#ApprovedDataTable").show();
        $('#ApprovedDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Report/AjaxLeaveReport",
            "bProcessing": true,
            "bDestroy": true,
            "aoColumns": [
                  //{ "sName": "LeaveId" },
                    { "sName": "LocationName" },
                      { "sName": "DepartmentName" },
                     { "sName": "UserName" },

                            { "sName": "LeaveTypeName" },
                            { "sName": "IsFullday" },
                            { "sName": "IsCompOff" },
                            { "sName": "LeaveFromDate" },
                            { "sName": "LeaveTodate" }, { "sName": "TotalLeaves" },

                            { "sName": "LeaveCreatedOn" },
                             { "sName": "LeaveStatus" },

  //                          {
  //                              "sName": "LeaveId",
  //                              "bSortable": false,
  //                              "render": function (data) {

  //                                  return '<div class="btn-group">' +
  //'<div class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span></div>' +
  //'<ul class="dropdown-menu dropdown-menu-right">' +
  //  '<li><a href="javascript:void(0);" id="' + data + '" onclick="EditLeave(this.id);">Edit Leave</a></li> <li><a href="javascript:void(0);" id="' + data + '" onclick="CancelLeave(this.id);">Delete Leave</a></li> <li><a href="javascript:void(0);" onclick="ViewDetails(this.id);" id="' + data + '">View Details</a></li>' +
  //'</ul></div>';
  //                              }
  //                          }
            ],
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, 500, 1000], [10, 20, 30, 50, 100, 150, 200, 500, 1000]],
            "sDom": 'T<"clear">lfrtip',
            "oTableTools": {
                "sSwfPath": "/swf/copy_csv_xls_pdf.swf",
                "aButtons": [
                    "copy", "xls", "pdf"
                ]
            },
            "fnServerParams": function (aoData) {
                aoData.push(
                    { "name": "locationid", "value": $("#ddlLocation").val() },
                    { "name": "departmentid", "value": $("#ddlDepartment").val() },
                    { "name": "LeaveTypeid", "value": $("#ddlLeaveType").val() },
                    { "name": "fromdate", "value": $("#fromdate").val() },
                    { "name": "todate", "value": $("#todate").val() },
                     { "name": "Emp", "value": $("#ddlEmployees").val() }
                     );
            }
        });
        $("#ApprovedDataTable_length").addClass("col-md-6");
        $("#ApprovedDataTable_info").addClass("col-md-6");
    }
    function ConvertDatefromoneddmmyyytommddyyy(date) {
        if (date != null && date != "") {
            var cdate = date.split('/');
            return cdate[1] + "/" + cdate[0] + "/" + cdate[2];
        } else {
            return "";
        }
    }
    function LoadLocations() {
        $.ajax({
            type: "POST",
            url: "/Common/GetLocations",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- All Locations -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LocationId + '">' + data[i].LocationName + '</option>');
                }
                $("#ddlLocation").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadCommonDepartments() {
        $.ajax({
            type: "POST",
            url: "/Common/GetCommonDepartments",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- All Departments -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].CommonDepartmentId + '">' + data[i].Name + '</option>');
                }
                $("#ddlDepartment").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function LoadDepartment() {
        if ($("#ddlLocation").val() != null && $("#ddlLocation").val() != "") {
            $.ajax({
                type: "POST",
                url: "/Common/GetDepartmentByLocation",
                data: "id=" + $("#ddlLocation").val(),
                success: function (data) {
                    var options = [];
                    options.push('<option value="">- All Departments -</option>');
                    for (var i = 0; i < data.length; i++) {
                        options.push('<option value="' + data[i].DepartmentId + '">' + data[i].DepartmentName + '</option>');
                    }
                    $("#ddlDepartment").html(options.join(''));
                },
                error: function () {
                    alert("error")
                }
            });
        } else {
            var options = [];
            options.push('<option value="">- All Departments -</option>');

            $("#ddlDepartment").html(options.join(''));
        }
    }
    function LoadEmployees() {
        if ($("#ddlDepartment").val() != null && $("#ddlDepartment").val() != "" && $("#ddlLocation").val() != null && $("#ddlLocation").val() != "") {
            $.ajax({
                type: "POST",
                url: "/Common/GetEmployeesByDepartment",
                data: "id=" + $("#ddlDepartment").val(),
                success: function (data) {
                    var options = [];
                    options.push('<option value="">- All Employees -</option>');
                    for (var i = 0; i < data.length; i++) {
                        options.push('<option value="' + data[i].CustomUserId + '">' + data[i].FirstName + " " + data[i].LastName + '</option>');
                    }
                    $("#ddlEmployees").html(options.join(''));
                },
                error: function () {
                    alert("error")
                }
            });
        }
    }
    function LoadLeaveTypes() {
        $.ajax({
            type: "POST",
            url: "/HrAdmin/GetLeaveTypes",
            //data: "id=",
            success: function (data) {
                var options = [];
                options.push('<option value="">- All Leave Types -</option>');
                for (var i = 0; i < data.length; i++) {
                    options.push('<option value="' + data[i].LeaveTypeId + '">' + data[i].LeaveName + '</option>');
                }
                $("#ddlLeaveType").html(options.join(''));
            },
            error: function () {
                alert("error")
            }
        });
    }
    function ExporttoExcel() {
        window.location = "/Report/ExportToExcelEmployeesLeaveReport?location=" + $("#ddlLocation").val() + "&department=" + $("#ddlDepartment").val() + "&FromDate=" + $("#fromdate").val() + "&ToDate=" + $("#todate").val() + "&Employee=" + $("#ddlEmployees").val() + "&LeaveType=" + $("#ddlLeaveType").val();
    }
</script>
<div class="panel panel-default">
    <div class="panel-heading">Employees Leave Report &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="#" onclick="ExporttoExcel();">Export To Excel </a> </div>
    <div class="panel-body">
        <div class="row" style="padding-bottom:5px;">
            <div class="col-md-12" style="padding-bottom:5px;">
                <div class="col-md-2">
                    <select id="ddlLocation" class="form-control" style="max-width:200px;" onchange="LoadDepartment();">
                        <option value="">All Location</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="ddlDepartment" class="form-control" style="max-width:200px;" onchange="LoadEmployees();">
                        <option value="">All Department</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="ddlEmployees" class="form-control" style="max-width:200px;">
                        <option value="">All Employee</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="ddlLeaveType" class="form-control" style="max-width:200px;">
                        <option value="">All Leave Types</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type='text' class="form-control btdate" id='fromdate' placeholder="From Date" style="max-width:200px;" />
                </div>
                <div class="col-md-2">
                    <div class="col-md-10"><input type='text' class="form-control btdate" id='todate' placeholder="To Date" style="max-width:200px;" /> </div>
                    <div class="col-md-2"><input type="button" class="btn btn-sm btn-success" value="Go" onclick="ApprovedDataTable();" /> </div>
                </div>
            </div>
        </div>
        <table id="ApprovedDataTable" class="table table-striped table-bordered  dt-responsive " style="width:100%;">
            <thead>
                <tr>
                    <td>Location</td>
                    <td>Department</td>
                    <td>User Name</td>
                    <th>Leave Type</th>
                    <th>Is Full day</th>
                    <th>Is Comp Off</th>
                    <th>From Date  </th>
                    <th>To Date</th>
                    <th>NoOf Leaves</th>
                    <th>Applied Date</th>
                    <th>Leave Status</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>