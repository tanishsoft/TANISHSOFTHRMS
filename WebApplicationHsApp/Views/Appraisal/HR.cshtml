
@{
    ViewBag.Title = "HR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $("#txtfromdate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
        $("#txttodate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
        LoadSettingsData();
    });

    function SaveAppraisalCycle() {
        if (ValdiateDetails('cycleapp')) {
            var data = {
                Name: $("#txtNameOfCycle").val(),
                FromDate: $("#txtfromdate").val(),
                ToDate: $("#txttodate").val()
            }
            $.ajax({
                type: "GET",
                url: "/Appraisal/SaveAppraisalSettins",
                data: data,
                success: function (data) {
                    LoadSettingsData();
                    alert(data);
                },
                error: function () {
                    alert("error")
                }
            });
        } else {
            alert("Please enter all required fields");
        }
    }
    function LoadSettingsData() {
        $('#tblsettings').dataTable({
            "iDisplayLength": 10,
            "bServerSide": true,
            "sAjaxSource": "/Appraisal/AjaxAppraisalSettins",
            "bProcessing": true,
            "bAutoWidth": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            //"aaSorting": [[0, "desc"]],
            "aoColumns": [
                 { "sName": "tbl_AppraisalSetting_id" },
                 { "sName": "Name" },
                 { "sName": "FromDate" },
                 { "sName": "ToDate" },
                 { "sName": "IsActive" },
                 { "sName": "CreatedBy" },
                 { "sName": "tbl_AppraisalSetting_id" }
            ]
        });
        $("#tblsettings").addClass("col-md-6");
        $("#tblsettings").addClass("col-md-6");
    }
</script>


