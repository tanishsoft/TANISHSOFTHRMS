                TaskCpxId: value,
                CreatorLocationId: $("#cpxCreatorLocationId").val(),
                CreatorLocationName: $("#cpxCreatorLocation").val(),
                CreatorDepartmentId: $("#cpxCreatorDepartmentId").val(),
