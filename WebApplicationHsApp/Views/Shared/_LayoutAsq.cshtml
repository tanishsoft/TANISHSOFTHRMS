    @{
        TimeZoneInfo timeZoneInfo = TimeZoneInfo.FindSystemTimeZoneById("India Standard Time");
        DateTime ToDayDate_DateTimeFormat_1 = TimeZoneInfo.ConvertTime(DateTime.Now, timeZoneInfo);
        string ToDayDate_StringFormat_1 = ToDayDate_DateTimeFormat_1.ToString("dd/MM/yyyy");
        string ToDayDate_StringFormat_2 = ToDayDate_DateTimeFormat_1.ToString("MM,dd,yyyy");
        <input type="hidden" value="@ToDayDate_StringFormat_1" id="_LayOutHiddenDateFormat_1" />
