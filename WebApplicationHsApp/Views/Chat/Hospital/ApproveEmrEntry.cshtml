
@{
    ViewBag.Title = "ApproveEmrEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        LoadData();
    });
    function LoadData() {
        $('#tblMaster').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/Hospital/AjaxGetWaitingForApprovalEmrEntry",
            "bProcessing": true,
            "bDestroy": true,
            "aLengthMenu": [[10, 20, 30, 50, 100, 150, 200, -1], [10, 20, 30, 50, 100, 150, 200, "All"]],
            "aoColumns": [
                { "sName": "EmrEntryId" },
                { "sName": "LocationName" },
                { "sName": "FirstName" },
                { "sName": "MrNo" },
                { "sName": "PatientName" },
                { "sName": "DoctorName" },
                { "sName": "Mobile" },
                { "sName": "DateofError" },
                { "sName": "DateOfChange" },
                { "sName": "ReasonForChange" },
                { "sName": "RequestedCorrectionDetails" },
                { "sName": "FormName" },
                { "sName": "Suggestions" },
                { "sName": "IsActive" },
                {
                    "sName": "EmrEntryId",
                    "bSortable": false,
                    "render": function (data) {
                        return '<a href="javascript:void(0);" id="' + data + '" onclick="ApproveRequest(this.id);"><span style="color:green;font-size:15px;" class="glyphicon glyphicon-edit"></span>Approve</a> ';
                    }
                }
            ]
        });
        $("#tblMaster_length").addClass("col-md-6");
        $("#tblMaster_length").addClass("col-md-6");
    }
    function ApproveRequest(id) {
        if (confirm("Are you Sure you want to approve?")) {
            $.get("/Hospital/JsonApproveEmrEntry?id=" + id, function (data) {
                alert(data);
                LoadData();
            });
        }
    }
</script>
<div class="panel panel-default">
    <div class="panel-heading">Manage Emr Entries</div>
    <div class="panel-body">
        <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;" id="tblMaster">
            <thead>
                <tr style="background-color: #786C67;color: white;">
                    <th>ID</th>
                    <th>Location</th>
                    <th>User</th>
                    <th>Mr No</th>
                    <th>Patient Name</th>
                    <th>Doctor Name</th>
                    <th>Mobile</th>
                    <th>Date Of Error</th>
                    <th>Date Of Change</th>
                    <th>Reason </th>
                    <th class="none">Requested Correction Details</th>
                    <th>Form Name</th>
                    <th class="none">Suggestions</th>
                    <th class="none">Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
