
@{
    ViewBag.Title = "FHNDA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function SaveFhnda() {
        if ($("#cbcheckboxagree").prop('checked') == true) {
            if ($("#txtname").val() != null && $("#txtname").val() != "" &&
                $("#txtMobile").val() != null && $("#txtMobile").val() != "" &&
                $("#txtDepartmnet").val() != null && $("#txtDepartmnet").val() != "") {
                var model = {
                    name: $("#txtname").val(),
                    designation: $("#txtMobile").val(),
                    department: $("#txtDepartmnet").val(),
                    accept: true
                };
                $.get("/Hospital/SaveNDA", model, function (data) {
                    alert("Thankyou for submission.");
                    window.open("/Hospital/PrintFHNDA?name=" + $("#txtname").val() + "&designation=" + $("#txtMobile").val() + "&department=" + $("#txtDepartmnet").val() + "&accept=true");
                });
            } else {
                alert("Please enter all the required fields");
            }
        } else {
            alert("Please acknowledge the check box ' I agree that I have read, understand and will comply with this Agreement.'");
        }
    }
</script>

