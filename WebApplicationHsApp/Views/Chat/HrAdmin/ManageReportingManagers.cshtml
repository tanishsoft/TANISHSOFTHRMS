        }
        var task = {
            LocationId: $("#ddlLocation1").val() != undefined ? $("#ddlLocation1").val().trim() : "",
            DepartmentId: $("#ddlDepartment1").val() != undefined ? $("#ddlDepartment1").val().trim() : "",
            LocationName: selectedText,
            DepartmentName: deptText,
            UserId: $("#ddlEmployees").val() != undefined ? $("#ddlEmployees").val().trim() : "",
            UserName: custText,
            SubDepartmentId: $("#ddlSubDepartment").val() != undefined ? $("#ddlSubDepartment").val().trim() : "",
            SubDepartmentName: SubDepartmentName,
            IsHod: hod,
