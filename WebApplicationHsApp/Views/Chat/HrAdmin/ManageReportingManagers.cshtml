    function clearAll() {
        $("#ddlLocation").val("");
        $("#ddlDepartment").val("");
        $("#ddlEmployees").val("");
        $("#ddlLocation1").val("");
        $("#ddlDepartment1").val("");
        $("#ddlSubDepartment").val("");

        LoadLocations();
