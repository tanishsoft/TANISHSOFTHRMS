        };
        //validateForm(task);

        if (ValidateRequiredFieldsByClassName_GlobalJS("ReportingManagerRequiredField")) {


            $.ajax({
                type: "POST",
                url: "/HrAdmin/SaveReportingManager",
                data: task,
                success: function (data) {
                    alert(data);
                    clearAll();
                    $("#myModalNew").modal("hide");
                },
                error: function () {
                    alert("error")
                }
            });
        } else {
            alert("Fields Required");
