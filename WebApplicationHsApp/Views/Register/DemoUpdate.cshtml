
@{
    ViewBag.Title = "DemoUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .maxwidth {
        max-width: 100%;
    }
</style>

<script src="~/Scripts/jSignature.min.js"></script>
<!--[if lt IE 9]>
<script  type="text/javascript" src="~/Scripts/flashcanvas.js"></script>
    <![endif]-->
<script>
    var $sigdiv, $sigdiv2, id = 0;
    $(document).ready(function () {
        // $sigdiv = $("#captureSignature").jSignature({ 'UndoButton': true });
        $sigdiv2 = $("#captureSignatureSecurity").jSignature({ 'UndoButton': true });

        $("#txtReturnPerson").change(function () {
            $.get("/Custom/GetUserDetailsByEmpId?id=" + $("#txtReturnPerson").val(), function (data) {
                if (data != "Enter Valid Request ID") {
                    $("#personname").html(data.FirstName + " " + data.PhoneNumber);
                    //$("#txtstaffContactNumber").val(data.PhoneNumber);
                    //$("#dllstafdepartment").val(data.DepartmentName);
                }
            });
        });
        ViewDetails();
    });
    function Cancel() {
        window.location.replace("/Register/Demo");
    }
    function SaveUserSignoff() {
        var model = {
            Id: $("#hidBreakdownid").val(),
            //signature: "data:" + $sigdiv.jSignature('getData', 'image').toString(),
            ReturnSecuritySign: "data:" + $sigdiv2.jSignature('getData', 'image').toString(),
            ReturnSecurity: $("#txtReturnSecurity").val(),
            ReturnDepartment: $("#txtReturnDepartment").val(),
            ReturnPersonName: $("#personname").html(),
            ReturnRemarks: $("#txtremarks").val()
        }
        $.post('/Register/SaveDemoUpdate', model, function (data) {
            alert("Successfully updated");
            window.location.replace("/Register/Demo");
        });
    }
    function LoadDepartments(id) {
        $.get("/Common/GetDepartmentByLocation?id=" + id, function (data) {
            var options = [];
            options.push('<option value="">- Select Department -</option>');
            for (var i = 0; i < data.length; i++) {
                options.push('<option value="' + data[i].DepartmentName + '">' + data[i].DepartmentName + '</option>');
            }
            $("#txtReturnDepartment").html(options.join(''));
        });
    }
    function OnLocationchng(id) {
        LoadDepartments(id);
        $.get("/Register/GetSecurityDetails?locationId=" + id, function (data) {
            var options = [];
            options.push('<option value="">- Select Security -</option>');
            for (var i = 0; i < data.length; i++) {
                options.push('<option value="' + data[i].FirstName + '">' + data[i].FirstName + '</option>');
            }
            $("#txtReturnSecurity").html(options.join(''));
        });
    }
    function GetDatestr(date) {
        var d = new Date(parseInt(date.substr(6)));
        return d.toLocaleString("en-GB");
    }
    function ViewDetails() {
        $.get("/Register/GetRegister_Demo?id=" + $("#hidBreakdownid").val(), function (data) {
            OnLocationchng(data.LocationId);
            var html = "<table class='table table-bordered'>";
            //html += "<tr><td>Location</td><td>" + getlocationame(data.LocationId) + "</td></tr>";
            html += "<tr><td>Product Details</td><td>" + data.ProductDetails + "</td></tr>";
            html += "<tr><td>Vendor Name</td><td>" + data.VendorName + "</td></tr>";
            html += "<tr><td>Qty</td><td>" + data.Qty + "</td></tr>";
            html += "<tr><td>DcNo</td><td>" + data.DcNo + "</td></tr>";
            html += "<tr><td>Handover To Security</td><td>" + data.HandoverToSecurity + "</td></tr>";
            html += "<tr><td>HandOver To Department</td><td>" + data.HandOverToDepartment + "</td></tr>";
            html += "<tr><td>Hand OverDate </td><td>" + GetDatestr(data.HandOverDate) + "</td></tr>";
            html += "<tr><td>HandOver To PersonName</td><td>" + data.HandOverToPersonName + "</td></tr>";
            html += "<tr><td>HandOver Remarks</td><td>" + data.HandOverRemarks + "</td></tr>";
            if (data.ReturnSecurity != null && data.ReturnSecurity != "") {
                html += "<tr><td>Return Security </td><td>" + (data.ReturnSecurity) + "</td></tr>";
            }
            if (data.ReturnDepartment != null && data.ReturnDepartment != "") {
                html += "<tr><td>Return Department</td><td>" + data.ReturnDepartment + "</td></tr>";
            }
            if (data.ReturnPersonName != null && data.ReturnPersonName != "") {
                html += "<tr><td>Return Person</td><td>" + data.ReturnPersonName + "</td></tr>";
            }
            if (data.ReturnRemarks != null && data.ReturnRemarks != "") {
                html += "<tr><td>Return Remarks</td><td>" + data.ReturnRemarks + "</td></tr>";
            }

            if (data.HandoverToSecuritySign != null && data.HandoverToSecuritySign != "") {
                html += "<tr><td>Handover To Security Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.HandoverToSecuritySign + "' /></td></tr>";
            }
            if (data.ReturnSecuritySign != null && data.ReturnSecuritySign != "") {
                html += "<tr><td>Return Security Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.ReturnSecuritySign + "' /></td></tr>";
            }

            html += "</table>";
            $("#tableview").html(html);
        });
    }
</script>

<style>
    #captureSignature {
        width: 100%;
        height: auto;
        border: 1px solid black;
    }
</style>
<input type="hidden" id="hidBreakdownid" value="@ViewBag.Id" />
<div class="panel panel-default">
    <div class="panel-heading">Demo Register Update</div>
    <div class="panel-body">
        <div>
            <div class="row">
                <div class="col-md-12">
                    <div id="tableview">

                    </div>
                </div>
            </div>
            <div class="row" style="padding:5px;">
                <div class="col-md-2">
                    Return Security
                </div>
                <div class="col-md-4">
                    <select id="txtReturnSecurity" class="form-control">
                        <option value="">Select</option>
                    </select>
                </div>

                <div class="col-md-2">
                    Return Department
                </div>
                <div class="col-md-4">
                    <select id="txtReturnDepartment" class="form-control">
                        <option value="">Select</option>
                    </select> 
                </div>
            </div>
            <div class="row" style="padding:5px;">
                <div class="col-md-2">
                    Return Person (empid)
                </div>
                <div class="col-md-4">
                    <input type="text" id="txtReturnPerson" class="form-control" />
                    <span id="personname"></span>
                </div>

                <div class="col-md-2">
                    Remarks
                </div>
                <div class="col-md-4">
                    <textarea id="txtremarks" rows="2" class="form-control" style="width:100%"></textarea>
                </div>
            </div>

            <div class="row" style="padding:15px;">

                <div class="form-group col-md-12">
                    <label style="margin-bottom:5px;">Return Security Signature</label><br />
                    <div id="captureSignatureSecurity">
                    </div>

                </div>
            </div>
        </div>
        <div>
            <input type="button" id="btnasigntask" value="Save" onclick="SaveUserSignoff();" class="btn btn-primary">
            <button type="button" class="btn btn-default" onclick="Cancel();">Cancel</button>
        </div>
    </div>
</div>