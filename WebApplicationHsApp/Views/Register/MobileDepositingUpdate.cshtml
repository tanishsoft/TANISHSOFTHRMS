
@{
    ViewBag.Title = "MobileDepositingUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style>
    .maxwidth {
        max-width: 100%;
    }
</style>

<script src="~/Scripts/jSignature.min.js"></script>
<!--[if lt IE 9]>
<script  type="text/javascript" src="~/Scripts/flashcanvas.js"></script>
    <![endif]-->
<script>
    var $sigdiv, $sigdiv2, id = 0;
    $(document).ready(function () {
        $sigdiv = $("#captureSignatureSecurity").jSignature({ 'UndoButton': true });
        $sigdiv2 = $("#captureSignatureEmployee").jSignature({ 'UndoButton': true });
        ViewDetails();
        //LoadDropdownvalues();
    });
    function Cancel() {
        window.location.replace("/Register/MobileDepositing");
    }
    function OnLocationchng(id) {
        $.get("/Register/GetSecurityDetails?locationId=" +id, function (data) {
            var options = [];
            options.push('<option value="">- Select Security -</option>');
            for (var i = 0; i < data.length; i++) {
                options.push('<option value="' + data[i].FirstName + '">' + data[i].FirstName + '</option>');
            }
            $("#txtTakingSecurity").html(options.join(''));
        });
    }
    function SaveUserSignoff() {
        var model = {
            Id: $("#hidBreakdownid").val(),
            SecurityOutSign: "data:" + $sigdiv.jSignature('getData', 'image').toString(),
            EmployeeOutSign: "data:" + $sigdiv2.jSignature('getData', 'image').toString(),
            OutSecurity: $("#txtTakingSecurity").val()
        }
        $.post('/Register/SaveMobileDepositingUpdate', model, function (data) {
            alert("Successfully updated");
            window.location.replace("/Register/MobileDepositing");
        });
    }
    function GetDatestr(date) {
        var d = new Date(parseInt(date.substr(6)));
        return d.toLocaleString("en-GB");
    }
    function ViewDetails() {
        $.get("/Register/GetRegister_MobileDepositing?id=" + $("#hidBreakdownid").val(), function (data) {
            var html = "<table class='table table-bordered'>";
            OnLocationchng(data.LocationId);
            html += "<tr><td>Employee Number</td><td>" + data.EmployeeNumber + "</td></tr>";
            html += "<tr><td>Token Number</td><td>" + data.TokenNumber + "</td></tr>";
            html += "<tr><td>Remarks</td><td>" + data.Remarks + "</td></tr>";
            html += "<tr><td>RegisterDate</td><td>" + GetDatestr(data.RegisterDate) + "</td></tr>";
            html += "<tr><td>In Security</td><td>" + data.InSecurity + "</td></tr>";

            if (data.OutSecurity != null && data.OutSecurity != "") {
                html += "<tr><td>Out Security</td><td>" + data.OutSecurity + "</td></tr>";
            }
            if (data.SecurityInSign != null && data.SecurityInSign != "") {
                html += "<tr><td>Security In Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.SecurityInSign + "' /></td></tr>";
            }
            if (data.EmployeeOutSign != null && data.EmployeeOutSign != "") {
                html += "<tr><td>Employee Out Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.EmployeeOutSign + "' /></td></tr>";
            }

            if (data.SecurityOutSign != null && data.SecurityOutSign != "") {
                html += "<tr><td>Security Out Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.SecurityOutSign + "' /></td></tr>";
            }
            if (data.EmployeeInSign != null && data.EmployeeInSign != "") {
                html += "<tr><td>Employee In Sign</td><td><img style='border-radius:50%;width:100px;'src='/Documents/" + data.EmployeeInSign + "' /></td></tr>";
            }
            html += "</table>";
            $("#tableview").html(html);
        });
    }
</script>

<style>
    #captureSignatureSecurity {
        width: 100%;
        height: auto;
        border: 1px solid black;
    }

    #captureSignatureEmployee {
        width: 100%;
        height: auto;
        border: 1px solid black;
    }
</style>
<input type="hidden" id="hidBreakdownid" value="@ViewBag.Id" />
<div class="panel panel-default">
    <div class="panel-heading">Mobile Depositing Update</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div id="tableview">
                </div>
            </div>
        </div>
        <div class="row" style="padding:5px;">
            <div class="col-md-2">
                <label for="name">Out Security<span style="color:red;">*</span></label>
            </div>
            <div class="col-md-4">
                <select id="txtTakingSecurity" class="form-control">
                    <option value="">Select</option>
                </select>
            </div>
        </div>
        <div class="row" style="padding:15px;">
            <div class="form-group col-md-12">
                <label style="margin-bottom:5px;">Out Security Sign</label><br />
                <div id="captureSignatureSecurity">
                </div>

            </div>
        </div>
        <div class="row" style="padding:15px;">
            <div class="form-group col-md-12">
                <label style="margin-bottom:5px;">Out Emp Sign</label><br />
                <div id="captureSignatureEmployee">
                </div>
            </div>
        </div>
        <div>
            <input type="button" id="btnasigntask" value="Save" onclick="SaveUserSignoff();" class="btn btn-primary" />
            <button type="button" class="btn btn-default" onclick="Cancel();">Cancel</button>
        </div>
    </div>
</div>