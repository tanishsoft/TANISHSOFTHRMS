                $("#Description").addClass('css-error');
                validate = false;
            }
        }
        if (validate) {
            saveMealDetails(type);


        }
    }
    function saveMealDetails(type) {
        if (validate) {

            var model = {};
            if (type == "U") {
                model = {
                    MealTypeId: $("#mMealTypeId").val(),
                    Name: $("#Name").val(),
                    Description: $("#Description")
                };

            }
            else {
                model = {
                    Name: $("#mName").val(),
                    Description: $("#mDescription").val(),
                    Color: $("#mColor").val(),
                    IsActive: true
                }

            }
            $.ajax({
                type: "GET",
                url: "/DMS/SaveCategoryDetails",

                data: model,
                success: function (result) {
                    alert(result);
                    clearData();
                    GetAllCategoryDetails();
                },
                error: function (err) {
                    alert(err.statusText);
                    clearData();
                }
            });
        }
    }
    function clearData() {
        $(".error").hide();
        $(".css-error").removeClass('css-error');
        $("#mMealTypeId").val('');
        $("#mName").val("");
        $("#mDescription").val("");
        $("#mDocument1").val("");
        $("#Name").val("");
        $("#Description").val("");
        $("#Document1").val("");
        $("#DeleteConfirmation").modal("hide");
        $("#myModalMeal").modal("hide");
        $("#myModalMealEdit").modal("hide");
        $("#Document1").val(null);
        GetAllCategoryDetails();
    }
    function EditMealDetails(mealTypeId) {
        var Url = "/DMS/GetCategoryDetails?Id=" + mealTypeId;
        $.ajax({
            type: "GET",
            url: Url,
            success: function (data) {
                $("#myModalMealEdit").modal();
                var obj = data;
                $("#mMealTypeId").val(obj.MealTypeId);
                $("#Name").val(obj.Name);
                $("#Description").val(obj.Description);
                //$("#tdDocumentName").text(obj.Document1);
            }
        });

    }
    function DeleteMealDetails(mealTypeId) {
        var Url = "/DMS/UpdateCategoryStatus?Id=" + mealTypeId;
        $.ajax({
            type: "GET",
            url: Url,
            success: function (data) {
                $("#DeleteConfirmation").modal("hide");
            }
        });

    }
    //Show The Popup Modal For DeleteComfirmation
    var Delete = function (Id) {
        $("#mMealTypeId").val(Id);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        $.ajax({
            type: "POST",
            url: "/DMS/UpdateCategoryStatus?Id=" + $("#mMealTypeId").val(),
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                GetAllCategoryDetails();
            }
        });

    }
</script>




