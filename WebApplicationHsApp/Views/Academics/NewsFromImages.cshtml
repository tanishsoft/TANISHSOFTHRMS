
@{
    ViewBag.Title = "NewsFromImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">Pics of Annual Day  &nbsp;&nbsp;&nbsp;<a href="/Academics/NewsFrom">Go Back </a> </div>
    <div class="panel-body" style="min-height:500px;">


        <div class="tz-gallery">
            <div class="row">
                @foreach (string img in Model)
                {
                    <div class="col-sm-2 col-md-2">
                        <a class="lightbox" href="~/Images/December/Annual_Day/@img">
                            <img src="~/Images/December/Annual_Day/@img" alt="img" style="width:200px;height:180px; margin:auto" />
                        </a>
                    </div>
                }


            </div>
        </div>
        <img src="~/Images/December/FF-Annual_Day_Event_Mailer_Pg.jpg" style="width:100%;height:1400px;" />
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
<script>baguetteBox.run('.tz-gallery');</script>

<style>


    .tz-gallery {
        padding: 20px;
    }

        /* Override bootstrap column paddings */
        .tz-gallery .row > div {
            padding: 2px;
        }

        .tz-gallery .lightbox img {
            width: 100%;
            border-radius: 0;
            position: relative;
        }

        .tz-gallery .lightbox:before {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -13px;
            margin-left: -13px;
            opacity: 0;
            color: #fff;
            font-size: 26px;
            font-family: 'Glyphicons Halflings';
            content: '\e003';
            pointer-events: none;
            z-index: 9000;
            transition: 0.4s;
        }


        .tz-gallery .lightbox:after {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            background-color: rgba(46, 132, 206, 0.7);
            content: '';
            transition: 0.4s;
        }

        .tz-gallery .lightbox:hover:after,
        .tz-gallery .lightbox:hover:before {
            opacity: 1;
        }

    .baguetteBox-button {
        background-color: transparent !important;
    }
</style>
