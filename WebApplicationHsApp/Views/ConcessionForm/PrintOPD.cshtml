@model WebApplicationHsApp.Models.ConcessionViewModel
@{
    ViewBag.Title = "PrintOPD";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="row main">
    <h4>OPD CONCESION REQUEST/APPROVAL DORM</h4>
</div>
<div class="row main">
    <table class="table table-bordered" style="width: 40%;">
        <tr>
            <td>Date:@Model.DateOfSubmit</td>
            <td>MR NO::@Model.IPNumber</td>
            <td>Patient Name:@Model.PatientName</td>
            <td>Concession Category:@Model.Category</td>
        </tr>
        <tr>
            <td colspan="3">Justification for concession:@Model.Justification</td>
            <td>Concession advised:@Model.ConcessionAdvised</td>
        </tr>
        <tr>
            <td colspan="4">Validity:@Model.Validity</td>
        </tr>
        <tr style="height:120px;">
            <td colspan="4">
                <div class="row">
                    <div class="col-md-6">
                        <h5><U>SERVICES:@Model.Service</U></h5><br>
                        <span>CONSULTAION:@Model.Consultation</span><br><br>
                        <span>SCAN: @Model.Scan</span><br><br>
                        <span>INVESTIGATIONS: @Model.Investigations</span>
                        <span>PROCEDURES : @Model.ProcedureName</span>
                    </div>
                    <div class="col-md-6">
                        <h5><b>AMOUNT /(%) : @Model.TotalBillAmount</b></h5>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">CONSULTANT</td>
            <td>ADMINISTRATOR : @Model.Approver</td>
            <td>FC/BILLING</td>
        </tr>
    </table>
</div>
