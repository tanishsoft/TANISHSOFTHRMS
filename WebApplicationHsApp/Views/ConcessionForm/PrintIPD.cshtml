@model WebApplicationHsApp.Models.ConcessionViewModel
@{
    ViewBag.Title = "PrintIPD";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="row main">
    <h4>IPD CONCESION REQUEST/APPROVAL FORM</h4>
</div>
<div class="row main ">
    <table class="table table-bordered" style="width: 40%;">
        <tr>
            <td>Date:@Model.DateOfSubmit</td>
            <td>IP NO::@Model.IPNumber</td>
            <td>Patient Name:@Model.PatientName</td>
            <td>Concession Category:@Model.Category</td>
        </tr>
        <tr>
            <td colspan="3">Justification for concession:@Model.Justification</td>
            <td>Concession advised:@Model.ConcessionAdvised</td>
        </tr>
        <tr>
            <td colspan="4">Package(if any):@Model.Package</td>
        </tr>
        <tr style="height:120px;">
            <td colspan="4">
                <div class="row">
                    <div class="col-md-6">
                        <h5><U>DETAILS</U></h5><br>
                        <span>Total Bill:@Model.TotalBillAmount</span><br><br>
                        <span>Paid by Patient:@Model.PaidByPatient</span><br><br>
                        <span>Total Concession:@Model.TotalConcessionAmount</span>
                    </div>
                    <div class="col-md-6">
                        <h5><b>AMOUNT RS : @Model.TotalBillAmount</b></h5>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">MEDICAL DIRECTOR : </td>
            <td>APPROVED BY : @Model.Approver</td>
            <td>ADMINISTRATOR</td>
        </tr>
    </table>
</div>